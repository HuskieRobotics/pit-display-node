<!DOCTYPE html>
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<body>
  <section>
    <!-- Sidebar navigation (from main branch) -->
    <%- include('include/_sidebar') %>

    <!-- Checklist (with dynamic tasks from checklist branch) -->
    <div class="checklist">
      <p>Checklist</p>
      <% tasks.forEach(function(task, taskIndex) { %>
        <details>
          <summary><%= task.name %></summary>
          <% for (var i = 0; i < task.checklistItems.length; i++) { %>
            <label>
              <input 
                type="checkbox" 
                data-key="checklist-<%= taskIndex %>-<%= i %>" 
                name="check<%= taskIndex %>_<%= i %>" 
                value="check<%= taskIndex %>_<%= i %>" 
              /> 
              <%= task.checklistItems[i].taskName %>
            </label>
            <br />
          <% } %>
        </details>
      <% }); %>
    </div>

    <div class="data">
      <div class="temp">
        <div class="temp1">
          <p>FL Drive : 0°C</p>
          <p>FL Steer : 0°C</p>
          <p>FR Drive : 0°C</p>
          <p>FR Steer : 0°C</p>
          <p>BL Drive : 0°C</p>
          <p>BL Steer : 0°C</p>
          <p>BR Drive : 0°C</p>
          <p>BR Steer : 0°C</p>
        </div>
        <div class="temp2">
          <p>Intake Roller : 0°C</p>
          <p>Intake Kicker : 0°C</p>
          <p>Climber : 0°C</p>
        </div>
        <div class="temp3">
          <p>Shooter Top : 0°C</p>
          <p>Shooter Bottom : 0°C</p>
          <p>Shooter Angle : 0°C</p>
          <p>Deflector : 0°C</p>
        </div>
      </div>
      <div class="bar"></div>
      <div class="runtime"></div>
      <div class="voltage"></div>
      <div class="can"></div>
      <!-- Graph Placeholder -->
      <div class="graph">
        <h2>Graph Placeholder</h2>
        <canvas id="graphPlaceholder" width="600" height="400"></canvas>
        <script>
      window.addEventListener("load", function() {
        const canvas = document.getElementById('graphPlaceholder');
        const ctx = canvas.getContext('2d');
        
        // Use performance.now() to determine the runtime (ms) since the navigation started
        const runtime = Math.floor(performance.now());
        const maxRuntime = 5000; // maximum value for scaling
        const barMaxWidth = 500; // maximum width for the bar graph

        // Calculate current bar width (clamp to barMaxWidth if runtime exceeds maxRuntime)
        const barWidth = (runtime / maxRuntime) * barMaxWidth;

        // Clear the canvas and draw the runtime bar
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = '#4CAF50';
        ctx.fillRect(50, 150, barWidth, 50);

        // Add text label with the runtime preceded by a descriptor label
        ctx.font = '20px Arial';
        ctx.fillStyle = '#fff';
        ctx.fillText(`Page Runtime: ${runtime}ms`, 50, 140);
      });
    </script>
      </div>
    </div>

    <div class="test">
      <div class="SwerveCheck">
        <button class="SwerveCheckButton">Swerve Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ❌</p>
      </div>
      <div class="ArmCheck">
        <button class="ArmCheckButton">Arm Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ❌</p>
        <p class="checkpar">check 3 ✅</p>
      </div>
      <div class="TurretCheck">
        <button class="TurretCheckButton">Turret Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ✅</p>
      </div>
      <div class="JawCheck">
        <button class="JawCheckButton">Jaw Check</button>
        <p class="checkpar">check 1 ❌</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ❌</p>
      </div>
      <div class="IntakeCheck">
        <button class="IntakeCheckButton">Intake Check</button>
        <p class="checkpar">check 1 ⌛</p>
        <p class="checkpar">check 2 ⌛</p>
        <p class="checkpar">check 3 ⌛</p>
      </div>
      <div class="ManhattenCheck">
        <button class="ManhattenCheckButton">Manhatten Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ✅</p>
      </div>
    </div>
    
  </section>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/robot.js"></script>
</body>
</html>
