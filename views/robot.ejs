<!DOCTYPE html>
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<body>
  <section>
    <!-- Sidebar navigation (from main branch) -->
    <%- include('include/_sidebar') %>

    <!-- Checklist (with dynamic tasks from checklist branch) -->
    <div class="checklist">
      <p>Checklist</p>
      <% tasks.forEach(function(task, taskIndex) { %>
        <details>
          <summary><%= task.name %></summary>
          <% for (var i = 0; i < task.checklistItems.length; i++) { %>
            <label>
              <input 
                type="checkbox" 
                data-key="checklist-<%= taskIndex %>-<%= i %>" 
                name="check<%= taskIndex %>_<%= i %>" 
                value="check<%= taskIndex %>_<%= i %>" 
              /> 
              <%= task.checklistItems[i].taskName %>
            </label>
            <br />
          <% } %>
        </details>
      <% }); %>
    </div>

    <div class="data">
      <div class="temp">
        <div class="temp1">
          <p>FL Drive : 0°C</p>
          <p>FL Steer : 0°C</p>
          <p>FR Drive : 0°C</p>
          <p>FR Steer : 0°C</p>
          <p>BL Drive : 0°C</p>
          <p>BL Steer : 0°C</p>
          <p>BR Drive : 0°C</p>
          <p>BR Steer : 0°C</p>
        </div>
        <div class="temp2">
          <p>Intake Roller : 0°C</p>
          <p>Intake Kicker : 0°C</p>
          <p>Climber : 0°C</p>
        </div>
        <div class="temp3">
          <p>Shooter Top : 0°C</p>
          <p>Shooter Bottom : 0°C</p>
          <p>Shooter Angle : 0°C</p>
          <p>Deflector : 0°C</p>
        </div>
      </div>
      
      <div class="bar"></div>
      
      <!--Robot Code Runtime Chart - Adjusted position -->
      <div class="runtime-graph">
        <h2>Robot Code Runtime</h2>
        <canvas id="runtimeChart" width="300" height="200"></canvas>
      </div>
      
      <div class="runtime"></div>
      <div class="voltage"></div>
      <div class="can"></div>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation"></script>
      <script>
        async function renderRuntimeChart() {
          const response = await fetch('/robot/api/runtimeInfo');
          const data = await response.json();
          const ctx = document.getElementById('runtimeChart').getContext('2d');
          new Chart(ctx, {
            type: 'line',
            data: {
              labels: ['Uptime (s)'],
              datasets: [{
                label: 'Robot Uptime',
                data: [data.uptime],
                backgroundColor: 'rgba(54, 162, 235, 0.6)'
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                annotation: {
                  annotations: {
                    line1: {
                      type: 'line',
                      yMin: 20,
                      yMax: 20,
                      borderColor: 'rgb(255, 99, 132)',
                      borderWidth: 2,
                      label: {
                        content: '20ms',
                        enabled: true,
                        position: 'end'
                      }
                    }
                  }
                },
                legend: {
                  display: false
                }
              },
              scales: {
                y: { 
                  beginAtZero: true,
                  ticks: {
                    font: {
                      size: 10
                    }
                  }
                },
                x: {
                  ticks: {
                    font: {
                      size: 10
                    }
                  }
                }
              }
            }
          });
        }
        renderRuntimeChart();
      </script>
      <style>
        .runtime-graph {
          width: 320px;
          height: 220px;
          margin: 10px 0 5px 5px;  /* top right bottom left */
          padding: 10px;
          background: #f5f5f5;
          border-radius: 5px;
          display: block;
        }
        .runtime-graph h2 {
          font-size: 14px;
          margin: 0 0 5px 0;
          text-align: center;
        }
      </style>
    </div>

    <div class="test">
      <div class="SwerveCheck">
        <button class="SwerveCheckButton">Swerve Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ❌</p>
      </div>
      <div class="ArmCheck">
        <button class="ArmCheckButton">Arm Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ❌</p>
        <p class="checkpar">check 3 ✅</p>
      </div>
      <div class="TurretCheck">
        <button class="TurretCheckButton">Turret Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ✅</p>
      </div>
      <div class="JawCheck">
        <button class="JawCheckButton">Jaw Check</button>
        <p class="checkpar">check 1 ❌</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ❌</p>
      </div>
      <div class="IntakeCheck">
        <button class="IntakeCheckButton">Intake Check</button>
        <p class="checkpar">check 1 ⌛</p>
        <p class="checkpar">check 2 ⌛</p>
        <p class="checkpar">check 3 ⌛</p>
      </div>
      <div class="ManhattenCheck">
        <button class="ManhattenCheckButton">Manhatten Check</button>
        <p class="checkpar">check 1 ✅</p>
        <p class="checkpar">check 2 ✅</p>
        <p class="checkpar">check 3 ✅</p>
      </div>
    </div>
    
  </section>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/robot.js"></script>
</body>
</html>
